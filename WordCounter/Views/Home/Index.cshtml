@{
  Layout = "_Layout";
}

  <div class="container">
    <div class = "container">
      <h2>To find out how many times a word occurs in a passage of text, please fill in the fields below:</h2>
    </div>
    <br>
    <form action="/match" method="post">
      <label for="tBase">Enter a Passage of Text: </label>
      <input id="tBase" name="tBase" type="text">
      <label for="gWord">Enter a Word: </label>
      <input id="gWord" name="gWord" type="text">
      <button type="submit" class="btn btn-primary" name="button">Enter</button>
    </form>
  </div>
